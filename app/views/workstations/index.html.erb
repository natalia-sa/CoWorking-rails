<p id="notice"><%= notice %></p>

<h1>Workstations</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workstations.each do |workstation| %>
      <tr>
        <td><%= workstation.title %></td>
        <td><%= workstation.description %></td>
        <td><%= link_to 'Show', workstation %></td>
        <td><%= link_to 'Edit', edit_workstation_path(workstation) %></td>
        <td><%= link_to 'Destroy', workstation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Workstation', new_workstation_path %>
